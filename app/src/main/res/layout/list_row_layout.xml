<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="10dp"
    android:dividerHeight="10dp"
    android:orientation="horizontal"
    android:background="@drawable/background_shadow">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:adjustViewBounds="true"
        android:background="@drawable/textview_bg"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/title"
        android:text="Job Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="6dp"
        android:padding="5dp"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"
        android:typeface="sans"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/reporter"
        android:layout_alignStart="@+id/reporter"
        android:layout_toLeftOf="@+id/payment_info"
        android:layout_toStartOf="@+id/payment_info" />
    <TextView
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:id="@+id/payment_info"
        android:text="$20.00"
        android:padding="5dp"
        android:textColor="#FFFFFF"
        android:typeface="sans"
        android:textSize="20sp"
        android:layout_alignTop="@+id/imageView"
        android:layout_alignRight="@+id/imageView"
        android:layout_alignEnd="@+id/imageView"
        android:gravity="center_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/job_desc"
        android:text="Description Description Description Description Description Description"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        android:paddingLeft="5dp"
        android:textColor="#FFFFFF"
        android:typeface="sans"
        android:textSize="12sp"
        android:layout_below="@+id/title"
        android:layout_alignLeft="@+id/title"
        android:layout_alignStart="@+id/title"
        android:ellipsize="marquee"
        android:singleLine="true"
        android:maxLength="40"
        android:layout_toStartOf="@+id/payment_info"
        android:layout_toLeftOf="@+id/payment_info" />

    <TextView
        android:id="@+id/reporter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/chatroom_btn"
        android:layout_marginLeft="80dp"
        android:elevation="6dp"
        android:padding="5dp"
        android:text="Company"
        android:textColor="#FFFFFF"
        android:textSize="15sp"
        android:textStyle="bold"
        android:layout_toLeftOf="@+id/textView"
        android:layout_toStartOf="@+id/textView" />

    <TextView
        android:id="@+id/chatroom_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView"
        android:layout_alignEnd="@+id/imageView"
        android:layout_alignRight="@+id/imageView"
        android:drawableRight="@drawable/ic_message_white_24dp"
        android:elevation="6dp"
        android:padding="5dp" />

    <TextView
        android:id="@+id/jobId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:text="New Text"
        android:visibility="invisible"/>

    <ImageView
        android:id="@+id/profile_picture"
        android:layout_width="60dp"
        android:layout_height="80dp"
        android:layout_alignBottom="@+id/imageView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="10dp"
        android:elevation="6dp"
        android:src="@drawable/avatar_placeholder" />

        <TextView
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="@string/details_text"
            android:textColor="#FFFFFF"
            android:paddingTop="2dp"
            android:layout_alignBottom="@+id/reporter"
            android:layout_toLeftOf="@+id/chatroom_btn"
            android:gravity="right"
            android:textSize="12sp"
            android:id="@+id/textView" />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/chatroom_btn"
            android:layout_alignEnd="@+id/imageView"
            android:layout_toRightOf="@+id/job_desc"
            android:layout_toEndOf="@+id/job_desc"
            android:layout_marginBottom="5dp"
            android:gravity="center_horizontal">
            <ImageView
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:id="@+id/status_button"
                android:layout_margin="5dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Available"
                android:textColor="#FFFFFF"
                android:layout_toRightOf="@+id/status_button"
                android:padding="4dp"
                android:textSize="10sp"
                android:id="@+id/status_text"/>

        </RelativeLayout>
        </RelativeLayout>